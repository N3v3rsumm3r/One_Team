<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<% if @requests.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Project Association</th>
        <th>Location</th>
        <th>Department</th>
        <th>Group</th>
        <th>Open</th>
        <th>Created by</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @requests.each do |request| %>
        <tr>
          <td><%= request.name %></td>
          <td><%= request.description %></td>
          <td><%= request.start_date %></td>
          <td><%= request.end_date %></td>
          <td><%= request.project.name %></td>
          <td><%= request.location.name%></td>
          <td><%= request.department.name %></td>
          <td><%= request.group.name %></td>
          <td><%= request.open %></td>
          <td><%= request.user.full_name %></td>
          <td><%= link_to 'Show', request %></td>
          <td><%= link_to 'Edit', edit_request_path(request) %></td>
          <td>
            <% if current_user.admin? || owner_of?(request) %>
              <%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="center_text">
    There are no active requests.
  </div>
<% end %>

<br>

