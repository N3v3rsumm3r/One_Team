<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Project Association</th>
      <th>Location</th>
      <th>Department</th>
      <th>Group</th>
      <th>Open</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.title %></td>
        <td><%= request.description %></td>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td><%= request.project_id %></td>
        <td><%= request.location_id %></td>
        <td><%= request.department_id %></td>
        <td><%= request.group_id %></td>
        <td><%= request.open %></td>
        <td><%= request.user.full_name %></td>
        <td><%= link_to 'Show', request %></td>
        <!--<td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

