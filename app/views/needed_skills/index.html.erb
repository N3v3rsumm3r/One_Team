<p id="notice"><%= notice %></p>

<h1>Listing Needed Skills</h1>

<table>
  <thead>
    <tr>
      <th>Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @needed_skills.each do |needed_skill| %>
      <tr>
        <td><%= needed_skill.skill_id %></td>
        <td><%= link_to 'Show', needed_skill %></td>
        <td><%= link_to 'Edit', edit_needed_skill_path(needed_skill) %></td>
        <td>
          <% if current_user.admin? %>
            <%= link_to 'Destroy', needed_skill, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Needed skill', new_needed_skill_path %>
