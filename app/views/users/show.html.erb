<% provide(:title, @user.first_name + " " + @user.last_name) %>
<div class = "row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.first_name + " " + @user.last_name %>
        <p>
            <%= @user.email %>
        </p>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <div class="col-md-4">
      <strong>Manager:</strong>
      <% if @user.manager.nil? %>
        No Manager Assigned
      <% else %>
        <%= @user.manager.full_name %>
      <% end %>
    </div>
    <div class="col-md-4">
      <strong>Years with company:</strong>
      <% if @user.years_with_company.nil? %>
        Please Update Profile
      <% else %>
        <%= @user.years_with_company %>
      <% end %>        
    </div>
    <div class="col-md-4">
      <strong>Department:</strong>
      <%= request_if_missing(@user, :department, :name) %>
    </div>
    <div class="col-md-4">
      <strong>Location:</strong>
      <%= request_if_missing(@user, :location, :name) %>
    </div>
    <div class="col-md-4">
      <strong>Position:</strong>
      <%= request_if_missing(@user, :position, :name) %>
    </div>
    <div class="col-md-4">
      <strong>Group:</strong>
      <%= request_if_missing(@user, :group, :name) %>
    </div>
    <div class="col-md-4">
      <strong>Current Skills:</strong>
      <% @user.skills.each do |skill| %>
        <li><%= skill.name %></li>
      <% end %>
    </div>
    <div class="col-md-4">
      <strong>Desired Skills:</strong>
      <% @user.goals.each do |goal| %>
        <li><%= goal.name %></li>
      <% end %>
  </div>
</div>

  <% if current_user?(@user) %>
    <%= link_to 'Edit', edit_user_path(@user) %> |
  <% end %>
<%= link_to 'Back', users_path %>
