<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Department</th>
      <th>Location</th>
      <th>Position</th>
      <th>Group</th>
      <th>Manager</th>
      <th>Years with company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td>
          <%= request_if_missing(user, :department, :name) %>
        </td>
        <td>
          <%= request_if_missing(user, :location, :name) %>
        </td>
        <td>
          <%= request_if_missing(user, :position, :name) %>
        </td>
        <td>
          <%= request_if_missing(user, :group, :name) %>
        </td>
        <td>
          <% if user.manager.nil? %>
            No Manager
          <% else %>
            <%= user.manager.full_name %>
          <% end %>
        </td>
        <td><%= user.years_with_company %></td>
        <td><%= link_to 'Show', user %></td>
        <td>
          <% if current_user?(user) %>
            <%= link_to 'Edit', edit_user_path(user) %>
          <% end %>
        </td>
        <td>
          <% if current_user.admin? %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

