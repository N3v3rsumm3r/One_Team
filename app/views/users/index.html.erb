<div class="container">
  <h1>Listing Users</h1>
  <% @users.each do |user| %>
    <div class="row">
      <h4><%= user.full_name %></h4> - <a href="mailto:<%= user.email %>"><%= user.email %></a>
    </div>
    <div class="row">
      <%= request_if_missing(user, :position, :name) %>, member of <%= request_if_missing(user, :group, :name) %>
       in <%= request_if_missing(user, :department, :name) %> located in <%= request_if_missing(user, :location, :name) %>
    </div>
    <div class="row">
      Has worked for the company for <%= user.years_with_company %> years and is managed by 
      <% if user.manager.nil? %>
        No Manager 
      <% else %>
        <%= user.manager.full_name %>
      <% end %>
    </div>
    <div class="row">
      <%= link_to "Full Profile", user, class: "btn btn-default btn-xs" %>
      <% if current_user == user %>
        <%= link_to "Edit", edit_user_path(user), class: "btn btn-default btn-xs" %>
      <% end %>
      <% if current_user.admin? %>
        <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs" %>
      <% end %>
    </div><br>
  <% end %>
</div>
<br>

